<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        tools:context=".ui.SplashScreen">

    <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/tittleSplash"
            android:textSize="42sp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="@+id/lottieSplash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieSplash"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:elevation="5dp"
            android:background="@drawable/background_splah"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/splash"
            android:layout_marginTop="45dp" android:layout_below="@+id/tvAppName"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


</RelativeLayout>